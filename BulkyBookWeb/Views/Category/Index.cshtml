@* @model IEnumerable<Category>  *@
@model IEnumerable<BulkyBookWeb.Models.Category>
@{
    ViewData["Title"] = "Index";
}
<div class="col-6">
    <h2 class="text-primary">Category List</h2>
 </div>

<div class="container p-3">

    <div class="row pt-4">
        
        <div class="col-4">
            <form asp-controller="Category" asp-action="Index" method="get">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Search by Category Name" name="search">
                    <button class="btn btn-outline-primary" type="submit">Search</button>
                </div>

                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
                </a>

            </form>
        </div>
    </div>

    <br /><br />
    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No categories found.
        </div>
    }
    else
    {
        <table class="table table-border table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th>CreateTime</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">
                            @obj.Name
                        </td>
                        <td width="30%">
                            @obj.DisplayOrder
                        </td>
                        <td width="30%">
                            @obj.CreatedDateTime
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-controller="Category" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-arrows-expand-vertical"></i> Details</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-warning mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
